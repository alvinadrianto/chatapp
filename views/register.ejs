<h1 class="mt-5">Halaman Register</h1>

<div class="row">
  <div class="col-md-6">
    <% if (message.length !== 0) { %>
    <div class="alert alert-danger mt-3" role="alert"><%= message %></div>
    <% } %>

    <form action="/register" method="POST">
      <label for="username" class="form-label">Username : </label>
      <input type="text" name="username" id="username" class="form-control mb-3" placeholder="Input new Username" required />
      <label for="password" class="form-label">Password : </label>
      <input type="password" name="password" class="form-control mb-3" id="password" placeholder="Input new Password" required />
      <button type="submit" class="btn btn-primary mb-2">Register</button>
    </form>
    <a href="/">Back to Home</a>
  </div>
</div>
